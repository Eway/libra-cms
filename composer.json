        "doctrine/dbal":    "2.3.*@RC",
        "doctrine/orm":     "2.3.*@RC",
        "doctrine/data-fixtures": "dev-master",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-module": "dev-master",
        "doctrine/doctrine-orm-module": "dev-master",
        "libra/libra":          "dev-default",
        "libra/libra-app":      "dev-default",
        "libra/libra-article":  "dev-default",
        "libra/libra-locale":   "dev-default"
    },

    "require-dev": {
        "zendframework/zendframework": "dev-master",
        "doctrine/doctrine-orm-module": "dev-master",
        "zf-commons/zfc-user-doctrine-orm": "dev-master"
    },

    "provide": {
      
    },

    "sugest": {

    },

    "scripts": {
        "post-package-install":  "LibraInstaller\\Installer::postPackageInstall",
        "pre-package-uninstall": "LibraInstaller\\Installer::prePackageUnistall"
    }

