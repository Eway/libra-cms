{
    "name":         "libra/libra-cms",
    "type":         "library",
    "description":  "Default application for Libra CMS",
    "keywords":     ["zf", "zf2", "zendframework", "cms"],
    "homepage":     "http://www.libra-cms.ejoom.com",
    "time":         "2012-04-21",
    "licence":      "BSD-3-Clause",
    "authors": [
        {"name": "duke", "email": "duke@ejoom.com", "role": "maintainer, developer", "homepage": "http://www.ejoom.com"}
    ],

    "config": {
