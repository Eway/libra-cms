{
    "name":         "libra/libra-cms",
    "type":         "library",
    "description":  "Default application for Libra CMS",
    "keywords":     ["zf", "zf2", "zendframework", "cms"],
    "homepage":     "http://www.libra-cms.ejoom.com",
    "time":         "2012-04-21",
    "licence":      "BSD-3-Clause",
    "authors": [
        {"name": "duke", "email": "duke@ejoom.com", "role": "maintainer, developer", "homepage": "http://www.ejoom.com"}
    ],

    "config": {
        "bin-dir": "bin"
    },

    "minimum-stability": "stable",

    "require": {
        "php":                              ">=5.3.3",
        "libra/libra-assets-installer":     "dev-default",
        "zendframework/zendframework":      ">=2.0.0, <2.0.99",
        "doctrine/common":                  "2.3.*@RC",
        "doctrine/dbal":                    "2.3.*@RC",
        "symfony/console":                  ">=2.1.0, <2.1.99",
        "symfony/yaml":                     ">=2.1.0, <2.1.99",
        "doctrine/orm":                     "2.3.*@RC",
        "doctrine/data-fixtures":           "dev-master",
        "doctrine/migrations":              "dev-master",
        "doctrine/doctrine-module":         "dev-master",
        "doctrine/doctrine-orm-module":     "dev-master",
        "zf-commons/zfc-base":              "dev-master",
        "zf-commons/zfc-user":              "dev-master",
        "zf-commons/zfc-user-doctrine-orm": "dev-master",
        "libra/libra":                      "dev-default",
        "libra/libra-module-manager":       "dev-default",
        "libra/jquery-assets":              "dev-default",
        "libra/jquery-ui-assets":           "dev-default",
        "libra/twitter-bootstrap-assets":   "dev-default",
        "libra/libra-app":                  "dev-default",
        "libra/libra-article":              "dev-default",
        "libra/ckeditor-assets":            "dev-default",
        "libra/ckfinder-assets":            "dev-default",
        "libra/libra-navigation":           "dev-default",
        "libra/libra-markdown":             "dev-default",
        "libra/libra-locale":               "dev-default"
    },

    "require-dev": {
    },

    "provide": {
      
    },

    "sugest": {
        "libra/jquery-ui-assets": "Add jQuery User Interface library that will be installed in public dir",
        "libra/zendframework":    "Provede lighter zendframework library without tests"
    },

    "scripts": {
        "post-package-install":  "LibraAssetsInstaller\\Installer::postPackageInstall",
        "pre-package-uninstall": "LibraAssetsInstaller\\Installer::prePackageUninstall"
    }

}
